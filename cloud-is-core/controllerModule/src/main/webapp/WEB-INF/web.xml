<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" 
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
   
    
    <listener>
		<listener-class>eu.celarcloud.cloud_is.controllerModule.configuration.ContextInitializer</listener-class>
	</listener>
    <servlet>
        <servlet-name>Jersey Web Application</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>eu.celarcloud.cloud_is.controllerModule.restApi</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey Web Application</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <servlet>
	    <servlet-name>monitoringProxy</servlet-name>
	    <servlet-class>eu.celarcloud.cloud_is.controllerModule.httpproxy.MyProxyServlet</servlet-class>
	    <init-param>
	      <param-name>log</param-name>
	      <param-value>false</param-value>
	    </init-param>
	</servlet>
	<servlet-mapping>
	  <servlet-name>monitoringProxy</servlet-name>
	  <url-pattern>/monitoringProxy/*</url-pattern>
	</servlet-mapping>
    
    
</web-app>
